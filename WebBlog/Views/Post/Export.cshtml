@model WebBlog.Models.Blog.ExportPostsModel
@{
    ViewData["Title"] = "Export Posts";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        @if (TempData.ContainsKey("Message"))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form id="exportPostForm" method="post" action="/Post/Export" >
            <h2>Export Posts.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="@Model.StartDate" class="form-label"></label>
                <input type="date" asp-for="@Model.StartDate" class="form-control" autocomplete="off" aria-required="true" />
                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EndDate" class="form-label"></label>
                <input type="date" asp-for="@Model.EndDate" class="form-control" autocomplete="off" aria-required="true" />
                <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label"></label>
                <select asp-for="@Model.CategoryId" class="form-control">
                    <option value="" >--</option>"
                    @foreach (var item in Model.Categories)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>



            <button id="exportSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Export Data</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
